Manager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    QuestionWindow:

<MainWindow>:
    name: "main"
    butt: but1

    Button:
        id: but1
        background_color: 1,1,1,0
        on_release:
            app.root.current = "second"
            root.change_screen()

        Image:
            source: 'firstWindow.jpg'
            allow_stretch: True

            size: self.parent.size



<SecondWindow>:
    name: "second"
    input_name: input
    ScatterLayout:
        Image:
            source:'secondWindow.jpg'
            allow_stretch: True
            size: self.parent.size
        BoxLayout:
            orientation: 'vertical'
            padding:10
            spacing:50
            Label:
                size_hint: 1.2,1.2
                text:" "

            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                Label:
                    text:""
                    size_hint:1.5,1.5
                TextInput:
                    id: input
                    font_name: 'OpenSans-SemiBold.ttf'
                    hint_text:'Введите имя игрока: '
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    multiline: False
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    size_hint:0.55,0.5


                Button:

                    pos_hint: {'center_x':0.5, 'center_y':0.5}
                    size_hint:0.15,0.5
                    background_normal: 'button_play.png'
                    background_down: 'button_play_on.png'

                    on_release:
                        root.manager.screens[2].ids.name.text = root.ids.input.text if root.ids.input.text != "" else "Друзь"
                        root.sound.play()
                        app.root.current = "third"




<ThirdWindow>:
    name: "third"
    gamer_name: name
    on_pre_enter: root.make_score()
    score: count
    ScatterLayout:

        Button:
            id: but1
            background_color: 1,1,1,0
            on_press:
                root.start_anim()

            Image:
                id: gif
                source: 'volchocTest.gif'
                allow_stretch: True
                size: self.parent.size
                anim_delay: -1
                anim_loop: 1
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: count
                text:'0:0'
                markup: True
                font_size: '64pt'
                font_name: 'OpenSans-SemiBold.ttf'

            Label:
                text:''
                size_hint: 0.9,1
            Label:
                id: name
                text: "Game playground for "
                size_hint: 0.15,0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                font_size: '20pt'
                font_name: 'OpenSans-SemiBold.ttf'

<QuestionWindow>:
    name : "question"
    on_pre_enter : root.ask_question()
    question : quest
    answer: ans_input
    ScatterLayout:
        Image:
            source:'questionWindow.jpg'
            allow_stretch: True
            size: self.parent.size
        BoxLayout:
            orientation: 'vertical'
            padding:50
            spacing:50

            Label:
                id: quest
                text:"Here is question"
                font_size: '15pt'
                font_name: 'OpenSans-SemiBold.ttf'
                size_hint: 0.2, 2
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                color: 0,0,0,1
            BoxLayout:
                orientation: 'vertical'
                padding:20
                spacing:10
                TextInput:
                    id: ans_input
                    font_name: 'OpenSans-SemiBold.ttf'
                    hint_text:'Введите ответ: '
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    multiline: False
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint:0.55,0.5
                Button:

                    pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                    size_hint:0.2,0.45
                    background_normal: 'button_answer.png'
                    background_down: 'button_answer_on.png'

                    on_release:
                        root.btn_sound.play()
                        root.check_correct()
                        root.manager.screens[2].gamer_score = 0 if not root.correctly else 1
                        root.manager.screens[2].viewer_score = 0 if root.correctly else 1


